{
    "title": "{{ .Title }}",
    "date": "{{ .Date }}",
    "permalink" : "{{ .Permalink }}",
    "pages": [
        {{ range $index, $page := .Pages }}
        {{- if $index -}},{{- end -}}
        {
            "title": "{{ $page.Title }}",
            "date": "{{ $page.Date }}",
            "permalink" : "{{ $page.Permalink }}",
            "summary": "{{ $page.Summary | plainify }}"
        }
        {{- end -}}
    ]
}
